{
    "name": "duffle-vscode",
    "displayName": "Duffle",
    "description": "VS Code extension for Duffle, the CNAB installer",
    "version": "0.0.1",
    "preview": true,
    "publisher": "ms-kubernetes-tools",
    "engines": {
        "vscode": "^1.26.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:toml",
        "onCommand:extension.sayHello",
        "onView:duffle.bundleExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "snippets": [
            {
                "language": "toml",
                "path": "./snippets/duffle.json"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "duffle",
                    "icon": "./images/duffle.svg",
                    "title": "Duffle"
                }
            ]
        },
        "views": {
            "duffle": [
                {
                    "id": "duffle.bundleExplorer",
                    "name": "Bundles"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@types/shelljs": "^0.8.0",
        "shelljs": "^0.7.7"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/deis/duffle-vscode"
    }
}
