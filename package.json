{
    "name": "duffle-vscode",
    "displayName": "duffle-vscode",
    "description": "VS Code extension for Duffle, the CNAB installer",
    "version": "0.0.1",
    "publisher": "Microsoft",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.duffleInit",
        "onCommand:extension.duffleBuild",
        "onCommand:extension.dufflePush",
        "onCommand:extension.dufflePull",
        "onCommand:extension.duffleImport",
        "onCommand:extension.duffleExport",
        "onCommand:extension.duffleRun"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.duffleInit",
                "title": "Duffle Init"
            },
            {
                "command": "extension.duffleBuild",
                "title": "Duffle Build"
            },
            {
                "command": "extension.dufflePush",
                "title": "Duffle Push"
            },
            {
                "command": "extension.dufflePull",
                "title": "Duffle Pull"
            },
            {
                "command": "extension.duffleImport",
                "title": "Duffle Import"
            },
            {
                "command": "extension.duffleExport",
                "title": "Duffle Export"
            },
            {
                "command": "extension.duffleRun",
                "title": "Duffle Run"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
